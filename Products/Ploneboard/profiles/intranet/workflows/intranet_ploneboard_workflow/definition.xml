<?xml version="1.0"?>
<dc-workflow workflow_id="intranet_ploneboard_workflow"
             title="Intranet Ploneboard Workflow [Ploneboard]"
             state_variable="review_state"
             initial_state="internally_published">
 <permission>Access contents information</permission>
 <permission>Modify portal content</permission>
 <permission>Add portal content</permission>
 <permission>View</permission>
 <permission>Ploneboard: Search</permission>
 <permission>Ploneboard: Add Ploneboard</permission>
 <permission>Ploneboard: Add Forum</permission>
 <permission>Ploneboard: Add Conversation</permission>
 <permission>Ploneboard: Add Comment</permission>
 <permission>Ploneboard: Manage Conversation</permission>
 <permission>Ploneboard: Manage Comment</permission>
 <permission>Ploneboard: Approve Comment</permission>
 <state state_id="private" title="Hidden">
  <exit-transition transition_id="open"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Comment"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Conversation"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Forum"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Ploneboard"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Approve Comment"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Manage Comment"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Manage Conversation"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Search" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
 </state>

 <state state_id="locked" title="Locked">
  <exit-transition transition_id="unlock"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
  </permission-map>
  <permission-map name="Ploneboard: Add Comment"
                  acquired="False">
  </permission-map>
  <permission-map name="Ploneboard: Add Conversation"
                  acquired="False">
  </permission-map>
  <permission-map name="Ploneboard: Add Forum"
                  acquired="False">
  </permission-map>
  <permission-map name="Ploneboard: Add Ploneboard"
                  acquired="False">
  </permission-map>
  <permission-map name="Ploneboard: Approve Comment"
                  acquired="False">
  </permission-map>
  <permission-map name="Ploneboard: Manage Comment"
                  acquired="False">
  </permission-map>
  <permission-map name="Ploneboard: Manage Conversation"
                  acquired="False">
  </permission-map>
  <permission-map name="Ploneboard: Search" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Member</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Member</permission-role>
  </permission-map>
 </state>

 <state state_id="internally_published" title="Internally published">
  <exit-transition transition_id="hide"/>
  <exit-transition transition_id="lock"/>
  <permission-map name="Access contents information"
                  acquired="False">
   <permission-role>Member</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Add portal content" acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Modify portal content"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Comment"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Conversation"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Forum"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Add Ploneboard"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Approve Comment"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Reviewer</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Manage Comment"
                  acquired="False">
   <permission-role>Manager</permission-role>
   <permission-role>Owner</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Manage Conversation"
                  acquired="False">
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="Ploneboard: Search" acquired="False">
   <permission-role>Member</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
  <permission-map name="View" acquired="False">
   <permission-role>Member</permission-role>
   <permission-role>Manager</permission-role>
  </permission-map>
 </state>


 <transition transition_id="hide" title="Hide message board"
             new_state="private" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_publish_form"
          category="workflow">Hide</action>
  <guard>
   <guard-permission>Ploneboard: Add Forum</guard-permission>
  </guard>
 </transition>

 <transition transition_id="open" title="Open message board"
             new_state="internally_published" trigger="USER"
             before_script="" after_script="">
  <action url="%(content_url)s/content_publish_form"
          category="workflow">Open</action>
  <guard>
   <guard-permission>Ploneboard: Add Forum</guard-permission>
  </guard>
 </transition>

 <transition transition_id="lock" title="Lock message board"
             new_state="locked" trigger="USER"
             before_script="" after_script="lock_or_unlock">
  <action url="%(content_url)s/content_publish_form"
          category="workflow">Lock</action>
  <guard>
   <guard-permission>Ploneboard: Manage Forum</guard-permission>
  </guard>
 </transition>

 <transition transition_id="unlock" title="Unlock message board"
             new_state="internally_published" trigger="USER"
             before_script="" after_script="lock_or_unlock">
  <action url="%(content_url)s/content_publish_form"
          category="workflow">Unlock</action>
  <guard>
   <guard-permission>Ploneboard: Manage Forum</guard-permission>
  </guard>
 </transition>


 <variable variable_id="action" for_catalog="False"
           for_status="True" update_always="True">
  <description>The last transition</description>
  <default>

   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False"
           for_status="True" update_always="True">
  <description>The ID of the user who performed the last transition</description>
  <default>

   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False"
           for_status="True" update_always="True">
  <description>Comments about the last transition</description>
  <default>

   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False"
           for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>

   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Ploneboard: Add Conversation</guard-permission>
   <guard-permission>Ploneboard: Approve Comment</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False"
           for_status="True" update_always="True">
  <description>Time of the last transition</description>
  <default>

   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <script script_id="lock_or_unlock" type="External Method"
         filename="" module="Ploneboard.WorkflowScripts"
         function="lock_or_unlock"/>
</dc-workflow>
